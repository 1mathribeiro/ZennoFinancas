<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EsqueceuSenha">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fundo_1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="333dp"
        android:layout_height="225dp"
        app:srcCompat="@drawable/logo_2_removebg_preview"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="-34dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="333dp"
        android:layout_height="49dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:text="Esqueceu a senha?"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="353dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="333dp"
        android:layout_height="49dp"
        android:text="Não se preocupe! Acontece. Por favor digite o e-mail associado a sua conta."
        android:textColor="#F4F4F4"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="268dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="335dp"
        android:layout_height="49dp"
        android:text="Enviar código"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="453dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lembra sua senha?"
        android:textColor="#AEA9A9"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="682dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entre"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="682dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="52dp"
        android:layout_height="41dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/setazenno"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="51dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="334dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint=" Digite seu endereço de e-mail"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="388dp" />

</androidx.constraintlayout.widget.ConstraintLayout>